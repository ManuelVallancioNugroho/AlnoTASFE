@page "/studentpage"

<h2 align="center">Data Murid</h2>
 <a href="/addstudent" class="btn btn-primary mb-3">[+] Tambah Data</a> 
 <a><br></a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nim</th>
            <th>Nama Belakang</th>
            <th>Nama Depan</th>
            <th>Tanggal Masuk</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stud in Students)
        {
            <tr>
                <td>@stud.studentID</td>
                <td>@stud.lastName</td>
                <td>@stud.firstName</td>
                <td>@stud.enrollmentDate</td>
                <td>
                <a href="@($"detailpage/{stud.studentID}")" class="btn btn-info">Detil</a>
                <a href="/enrollment" class="btn btn-secondary">Enroll</a>
                <a href="@($"editstudent/{stud.studentID}")" class="btn btn-warning">Ubah</a>
                <a href="@($"deletestudent/{stud.studentID}")" class="btn btn-danger">Hapus</a></td>
            </tr>
        }
    </tbody>
</table>